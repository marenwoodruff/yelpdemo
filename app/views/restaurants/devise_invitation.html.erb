<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h1>Authorized Users</h1>
		<div class="panel panel-default">
		  <div class="panel-body">

		    <table class="table">
		    	<thead>
		    		<tr>
		    			<th>Name</th>
		    			<th>Email</th>
		    			<th>Status</th>
		    		</tr>
		    	<thead>

		    	<tbody>
		    		<% @users.each do |user| %>
			    		<tr>
			    			<td><%= user.name %></td>
			    			<td><%= user.email %></td>
			    			<% if user.admin? %>
			    				<td><span class="glyphicon glyphicon-star-empty red-star" aria-hidden="true"></span></td>
			    			<% elsif user.invitation_accepted?  %>
			    				<td><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span></td>
			    			<% else %>
			    				<td><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></td>
			    			<% end %>
			    		</tr>
		    		<% end %>
		    	</tbody>
		    </table>
		  </div>
		</div>
		<div>
	    <span class="glyphicon glyphicon-star-empty red-star" aria-hidden="true"> 
	    <span class="user-key"> = admin </span>
	  </div>
	  <div>
	    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"> 
	    <span class="user-key"> = invitation accepted </span>
	  </div>
	  <div>
	    <span class="glyphicon glyphicon-envelope" aria-hidden="true"> = invitation pending
	  </div>
		<br />
		<%= form_for(User.new, url: user_invitation_path, html: {class: 'form-inline'} ) do |f| %>
			<%= f.text_field :email, placeholder: "Email", class: "form-control" %>
			<%= f.submit "Send Invite", class: "btn btn-default" %>
		<% end %>
  </div>
</div>

